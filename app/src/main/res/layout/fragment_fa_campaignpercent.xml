        <LinearLayout
            android:id="@+id/layout_column2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_column1"
            android:layout_weight="30"
            android:orientation="vertical">

            <chick.circular_progress_bar.CircularProgressBar
                android:id="@+id/circular_progress_step3"
                style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                app:cpb_progressColor="#F63D2B"
                app:cpb_progressColorLine2="#ffb200"
                app:cpb_strokeWidth="15"
                android:progress="0"
                app:cpb_backgroundColor="@color/color_dashboard_advisory"
                app:cpb_titleColor="#FFFFFF"
                app:cpb_subtitleColor="#FFFFFF"
                circular:cpb_subtitle="subtitle"
                circular:cpb_title="Title" />

            <chick.circular_progress_bar.CircularProgressBar
                android:id="@+id/circular_progress_step4"
                style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                app:cpb_progressColor="#F63D2B"
                app:cpb_progressColorLine2="#ffb200"
                app:cpb_strokeWidth="15"
                app:cpb_backgroundColor="@color/color_dashboard_sign"
                app:cpb_titleColor="#FFFFFF"
                app:cpb_subtitleColor="#FFFFFF"
                circular:cpb_subtitle="subtitle"
                circular:cpb_title="Title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical">
            <chick.circular_progress_bar.CircularProgressBar
