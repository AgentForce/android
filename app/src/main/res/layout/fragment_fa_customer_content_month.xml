<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--mục tiêu theo tháng-->
    <LinearLayout
        android:id="@+id/layout_object_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--khách hàng liên hệ-->
        <RelativeLayout
            android:id="@+id/layout_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_dashboard_sign" />

            <ImageView
                android:id="@+id/image_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@color/color_dashboard_sign" />

            <TextView
                android:id="@+id/txt_step1_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_right"
                android:text="10/20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/welcome_activity_content"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_step1_result"
                android:layout_toRightOf="@+id/image_left"
                android:text="Khách hàng liên hệ"
                android:textSize="@dimen/welcome_activity_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <!--khách hàng hẹn gặp-->
        <RelativeLayout
            android:id="@+id/layout_meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_step2_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_dashboard_sign" />

            <ImageView
                android:id="@+id/image_step2_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@color/color_dashboard_sign" />

            <TextView
                android:id="@+id/txt_step2_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_step2_right"
                android:text="10/20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/welcome_activity_content"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_step2_result"
                android:layout_toRightOf="@+id/image_step2_left"
                android:text="Khách hàng hẹn gặp"
                android:textSize="@dimen/welcome_activity_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <!--khách hàng tư vấn-->
        <RelativeLayout
            android:id="@+id/layout_advisory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_step3_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_dashboard_sign" />

            <ImageView
                android:id="@+id/image_step3_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@color/color_dashboard_sign" />

            <TextView
                android:id="@+id/txt_step3_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_step3_right"
                android:text="10/20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/welcome_activity_content"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_step3_result"
                android:layout_toRightOf="@+id/image_step3_left"
                android:text="Khách hàng tư vấn"
                android:textSize="@dimen/welcome_activity_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <!--khách hàng ký hợp đồng-->
        <RelativeLayout
            android:id="@+id/layout_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_step4_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_dashboard_sign" />

            <ImageView
                android:id="@+id/image_step4_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@color/color_dashboard_sign" />

            <TextView
                android:id="@+id/txt_step4_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_step4_right"
                android:text="10/20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/welcome_activity_content"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_step4_result"
                android:layout_toRightOf="@+id/image_step4_left"
                android:text="Khách hàng ký hợp đồng"
                android:textSize="@dimen/welcome_activity_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray" />
        <!--khách hàng giới thiệu-->
        <RelativeLayout
            android:id="@+id/layout_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_step5_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_dashboard_sign" />

            <ImageView
                android:id="@+id/image_step5_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@color/color_dashboard_sign" />

            <TextView
                android:id="@+id/txt_step5_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/image_step5_right"
                android:text="10/20"
                android:textColor="@android:color/black"
                android:textSize="@dimen/welcome_activity_content"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_step5_result"
                android:layout_toRightOf="@+id/image_step5_left"
                android:text="Khách hàng giới thiêu"
                android:textSize="@dimen/welcome_activity_content" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>