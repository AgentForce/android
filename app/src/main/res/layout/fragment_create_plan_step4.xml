<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cus_text_step"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Bước 4"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/activity_create_plan_title_step4"
            android:textSize="@dimen/welcome_activity_note"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bot"
        android:layout_below="@+id/layout_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--liên hệ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu nhập hàng tháng"
                    android:textSize="@dimen/welcome_activity_note" />

                <TextView
                    android:id="@+id/txt_month_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30,000,000"
                    android:textSize="@dimen/welcome_activity_note"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />
            <!--liên hệ end-->

            <!--hẹn gặp-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thưởng đại lý mới"
                    android:textSize="@dimen/welcome_activity_note" />

                <TextView
                    android:id="@+id/txt_bonus_new_agency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20,000,000"
                    android:textSize="@dimen/welcome_activity_note"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thưởng sản xuất tháng"
                    android:textSize="@dimen/welcome_activity_note" />

                <TextView
                    android:id="@+id/txt_bonus_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="148,500,000"
                    android:textSize="@dimen/welcome_activity_note"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thưởng sản xuất quý"
                    android:textSize="@dimen/welcome_activity_note" />

                <TextView
                    android:id="@+id/txt_bonus_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="43,200,000"
                    android:textSize="@dimen/welcome_activity_note"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thưởng tiến độ MDRT"
                    android:textSize="@dimen/welcome_activity_note" />

                <TextView
                    android:id="@+id/txt_bonus_mdrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42,000,000"
                    android:textSize="@dimen/welcome_activity_note"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng thu nhập"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/welcome_activity_note"/>

        <TextView
            android:id="@+id/total_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="613,000,000 đ"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/welcome_activity_title"/>

    <Button
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cus_button_events"
        android:text="Đồng ý với kế hoạch này"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>
