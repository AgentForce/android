<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cus_text_step"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Bước 3"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/activity_create_plan_title_step3"
            android:textSize="@dimen/welcome_activity_note"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rb_month_year"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cus_radio_group_background"
            android:orientation="horizontal"
            android:weightSum="60">

            <RadioButton
                android:id="@+id/rbn_month"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="30"
                android:background="@drawable/cus_radio_background"
                android:button="@null"
                android:checked="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="Theo tháng"
                android:textColor="@drawable/cus_radio_background" />

            <RadioButton
                android:id="@+id/rbn_year"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="30"
                android:background="@drawable/cus_radio_background"
                android:button="@null"
                android:checked="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="Theo năm"
                android:textColor="@drawable/cus_radio_background" />
        </RadioGroup>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_result" />

        <!--liên hệ-->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liên hệ "
                android:textSize="@dimen/welcome_activity_note" />

            <TextView
                android:id="@+id/txt_cus_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" khách hàng"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gray_seedbar_background"/>
        <!--liên hệ end-->

        <!--hẹn gặp-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hẹn gặp "
                android:textSize="@dimen/welcome_activity_note" />

            <TextView
                android:id="@+id/txt_appointment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" khách hàng"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gray_seedbar_background"/>
        <!--hẹn gặp end-->

        <!--tư vấn-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tư vấn "
                android:textSize="@dimen/welcome_activity_note" />

            <TextView
                android:id="@+id/txt_meet_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" khách hàng"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gray_seedbar_background"/>
        <!--tư vấn end-->

        <!--ký hợp đồng-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ký hợp đồng "
                android:textSize="@dimen/welcome_activity_note" />

            <TextView
                android:id="@+id/txt_contract_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" khách hàng"
                android:textSize="@dimen/welcome_activity_note"
                android:textStyle="bold"/>

        </LinearLayout>

        <!--ký hợp đồng-->

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_note"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cus_button_events"
            android:text="Đồng ý"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
