<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cus_border_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo sự kiện"
            android:textSize="@dimen/welcome_activity_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/backgroundGrey" />

        <TextView
            android:id="@+id/txt_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Gọi giới thiệu"
            android:textColor="@drawable/text_color_blue"
            android:textSize="@dimen/welcome_activity_note"
            android:clickable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundGrey" />

        <TextView
            android:id="@+id/txt_advisory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Gọi tư vấn"
            android:textColor="@drawable/text_color_blue"
            android:clickable="true"
            android:textSize="@dimen/welcome_activity_note" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundGrey" />

        <TextView
            android:id="@+id/txt_call_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Gọi lại"
            android:textColor="@drawable/text_color_blue"
            android:clickable="true"
            android:textSize="@dimen/welcome_activity_note" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundGrey" />

        <TextView
            android:id="@+id/txt_different"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Khác"
            android:textColor="@drawable/text_color_blue"
            android:clickable="true"
            android:textSize="@dimen/welcome_activity_note" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_create_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cus_button_border_white_background_events"
        android:text="Cancel"
        android:textColor="@drawable/text_color_green" />

</LinearLayout>